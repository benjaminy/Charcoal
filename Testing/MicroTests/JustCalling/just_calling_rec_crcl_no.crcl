int A[ 9 ] = { 4, 8, 3, 5, 6, 7, 2, 1, 0 };

#define N 100000000
#define T 1000

int f( int n, int x )
{
    if( n < 2 )
    {
        return A[ x ];
    }
    else
    {
        int half1 = n / 2;
        int half2 = n - half1;
        if( n < T )
        {
            int x2;
            no_yield { x2 = f( half1, f( half2, x ) ); }
            return x2;
        }
        else
        {
            return f( half1, f( half2, x ) );
        }
    }
}

int main( int argc, char **argv )
{
    return f( N, 1 );
}
